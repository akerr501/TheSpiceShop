<h2 class="table-header">{{title}}</h2>
<table class="data-table">
<thead class="keys">
  <tr>
    {{#each map.[0]}}
      <th>{{@key}}</th>
    {{/each}}
  </tr>
</thead>
<tbody class="data-rows">
  {{#each map}}
    <tr class="data-row">
    	{{#each this}}
        <td class="data">{{this}}</td>
      {{/each}}
    </tr>
  {{/each}}
</tbody>
</table>
