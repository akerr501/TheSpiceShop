{{!-- Members page, displays Member table --}}

<main class="members-container">
<input type="text" placeholder="Search..." class="search" name="search" id = "search">
<input type="submit" value="Search" class="search-submit" id ="search-submit">
{{> etable title="Members" map=members}}

<br><br>
<div id="member-form">
  <label for="fname">First Name:</label><br>
  <input type="text" id="fname" name="fname"><br>
  <label for="mname">Middle Name (optional):</label><br>
  <input type="text" id="mname" name="mname"><br>
  <label for="lname">Last Name:</label><br>
  <input type="text" id="lname" name="lname"><br>
  <label for="households">Household ID:</label><br>
  <select name="households" id="member-dropdown">
    {{#each householdIDs}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select><br><br>
  <input type="submit" value="Submit" id = "member-submit">
</div>
</main>
